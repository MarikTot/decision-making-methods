{% extends '@EasyAdmin/page/content.html.twig' %}

{% block content_title %}{{ title|default('Заполнение матрицы') }}{% endblock %}

{% block main %}
    <div {{ vue_component('FillMatrix', data) }}></div>
    <div class="d-flex justify-content-end">
        <a class="btn btn-success" href="{{ ea_url()
            .setController('App\\Controller\\Admin\\MatrixCrudController')
            .setAction('createTask')
            .setEntityId(data.matrix.id)
        }}">Создать задачу</a>
    </div>
{% endblock %}