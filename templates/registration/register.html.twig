{#{% extends 'base.html.twig' %}#}
{% extends ea is defined ? ea.templatePath('layout') : '@EasyAdmin/page/login_minimal.html.twig' %}

{% block page_title %}Регистрация{% endblock %}

{% block wrapper_wrapper %}
    <div class="d-flex w-100 h-100 align-items-center justify-content-center">
        <div class="bg-light p-5 w-50">
            <h1 class="text-center mb-2">Регистрация</h1>

            {{ form_start(registrationForm) }}

                {{ form_widget(registrationForm) }}

                <div class="d-flex justify-content-center mt-4">
                    <button type="submit" class="btn btn-primary btn-block btn-lg">
                        Зарегистрироваться
                    </button>
                </div>

                <div class="text-center text-muted mt-5">
                    Уже есть аккаунт?
                    <a href="/login" class="fw-bold text-body"><u>Войти</u></a>
                </div>

            {{ form_end(registrationForm) }}

        </div>
    </div>
{% endblock %}
